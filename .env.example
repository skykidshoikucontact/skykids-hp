# 管理者認証
ADMIN_USER=admin
# bcrypt でハッシュ化されたパスワード
# 例: npx bcryptjs your_password でハッシュを生成
ADMIN_PASS_HASH=$2a$10$xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# JWT署名用シークレット（ランダムな文字列を設定）
SESSION_SECRET=your-secret-key-here-change-this-in-production

# GitHub API連携
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_OWNER=your-github-username
GITHUB_REPO=skykids
GITHUB_BRANCH=main

# GitHub Raw URL経由でデータを取得する場合はtrueに設定
# 開発中はfalse（ローカルファイルから取得）
USE_GITHUB_RAW=false
